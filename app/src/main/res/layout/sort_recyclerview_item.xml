<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:paddingLeft="16dp"
    android:paddingTop="12dp"
    android:paddingBottom="12dp"
    android:orientation="horizontal"
    >



    <ImageView
        android:id="@+id/sort_item_iv"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_alignParentLeft="true"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_alignRight="@id/sort_recyclerview_right"
        android:layout_height="56dp"
        android:layout_toRightOf="@+id/sort_item_iv"
        android:orientation="vertical">

        <TextView
            android:id="@+id/sort_recyclerview_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:ellipsize="end"
            android:gravity="left|center"
            android:maxLines="1"
            android:paddingLeft="8dp"
            android:text="@string/xui_tip_empty_message"
            android:textColor="@color/TextColor"
            android:textSize="14sp"
            android:textStyle="bold" />

    </LinearLayout>



    <com.mikepenz.iconics.view.IconicsTextView
        android:id="@+id/sort_recyclerview_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="30dp"
        android:gravity="center"
        android:text="{ion-ios-arrow-right}"
        android:textColor="@color/theme_grey"
        android:textSize="28sp"
        android:autoSizeTextType="none"
        android:layout_alignParentRight="true"
        android:paddingRight="2dp"
        android:layout_centerVertical="true" />




</RelativeLayout>
