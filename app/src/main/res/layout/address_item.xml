<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="10dp"
    android:paddingRight="5dp"
    android:paddingTop="10dp"
    android:background="@color/theme_while"
    android:paddingLeft="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/theme_while"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/consignee_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="小庄"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/consignee_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:text="158*****397"
            android:textSize="14sp" />

    </LinearLayout>

    <TextView
        android:background="@color/theme_while"
        android:id="@+id/consignee_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:text="广州市天河区五山路141号"
        android:textColor="@color/cardview_shadow_start_color"
        android:textSize="14sp" />

    <View
        style="@style/line_vertical"
        android:background="@color/cardview_shadow_end_color"
        />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:background="@color/theme_while"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingBottom="6dp"
        android:paddingTop="6dp"
        android:layout_gravity="center_vertical">

        <RadioButton
            android:id="@+id/radio_selected"
            style="@style/radioButton_2"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:paddingTop="2dp"
            android:clickable="true"
            android:focusable="true"
            android:checked="false"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/radio_selectedText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingLeft="10dp"
            android:text="设为默认"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@id/radio_selected"
            android:textSize="14sp"
            />

        <TextView
            android:id="@+id/delete_address_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:drawableStart="@drawable/vector_drawable_trash"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="  删除"
            android:textSize="14sp"
            android:clickable="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintLeft_toRightOf="@id/radio_selected"
            app:layout_constraintTop_toTopOf="parent"
            android:focusable="true" />

        <TextView
            android:id="@+id/edit_address_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="  编辑"
            android:textSize="14sp"
            android:clickable="true"
            android:drawableStart="@drawable/vector_drawable_edit"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/delete_address_item"
            android:focusable="true" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>




